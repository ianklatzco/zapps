{% set navPages = collections.all | eleventyNavigation %}
<div class="nav">
    <a class="logo" href="/">
        <img width="100" height="30" src="/svg/logo.svg"/>
    </a>
    <ul>
        {%- for entry in navPages %}
            <li>
                <a href="{{ entry.url }}">{{ entry.title }}</a>
            </li>
        {%- endfor %}
    </ul>
</div>
<div class="nav nav--mobile">
    <input type="checkbox" id="expand-nav"/>
    <a class="logo" href="/">
        <img width="100" height="30" src="/svg/logo.svg"/>
    </a>
    <label class="nav__open-button" for="expand-nav">
        <img width="30" height="30" src="/svg/menu.svg"/>
    </label>
    <div class="menu">
        <label class="menu__close-button" for="expand-nav">
            <img width="30" height="30" src="/svg/x.svg"/>
        </label>
        <div class="menu__content">
            {%- for entry in navPages %}
                <a href="{{ entry.url }}">{{ entry.title }}</a>
            {%- endfor %}
        </div>
    </div>
</div>